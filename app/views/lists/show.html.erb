<section class="mt-4">
  <div class="row flex-sm-row-reverse">
    <div id="progress" class="col-md-4">
      <div class="card bg-transparent mb-3">
        <div class="card-body">
          <h4 class="card-title">Your stats</h4>
          <p class="card-text">
            Your progress:
          </p>
          <%= render 'progress', list: @list %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h1><%= @list.name %></h1>
      <p class="text-muted mb-5"><%= @list.description %></p>
      <ul id="movie-list" class="list-unstyled">
        <% @movies.each do |movie| %>
          <%= render 'movie', movie: movie %>
        <% end %>
      </ul>
    </div>
  </div>
</section>
