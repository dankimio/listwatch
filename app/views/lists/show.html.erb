<section class="mt-4">
  <div class="row flex-sm-row-reverse">
    <div id="progress" class="col-md-4">
      <%= render 'progress' %>
    </div>
    <div class="col-md-8">
      <h1><%= @list.name %></h1>
      <p class="text-muted mb-5"><%= @list.description %></p>
      <ul id="movie-list" class="list-unstyled">
        <% @movies.each do |movie| %>
          <%= render 'movie', movie: movie %>
        <% end %>
      </ul>
    </div>
  </div>
</section>
