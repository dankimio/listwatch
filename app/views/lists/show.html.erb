<section class="mt-4">
  <div class="row flex-sm-row-reverse">
    <div class="col-md-4">
      <div class="card bg-transparent mb-3">
        <div class="card-body">
          <h4 class="card-title">Your stats</h4>
          <p class="card-text">
            You have watched:
          </p>
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
              81 / 126
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h1>IMDb Top 250</h1>
      <p class="text-muted mb-4">Top 250 as rated by IMDb Users</p>
      <ul id="movie-list" class="list-unstyled">
        <% @movies.reverse.each_with_index do |movie| %>
          <%= render 'movie', movie: movie %>
        <% end %>
      </ul>
    </div>
  </div>
</section>
