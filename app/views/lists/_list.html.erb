<div class="card card-list">
  <div class="card-body">
    <h4 class="card-title">
      <%= link_to list.name, list %>
    </h4>
    <h6 class="card-subtitle mb-3 text-muted">
      <%= list.description&.truncate(100) %>
    </h6>
    <p class="card-text">
      <div class="row small-gutters">
        <% list.posters_cache.first(4).each do |poster_url| %>
          <div class="col-3">
            <%= image_tag small_poster_url(poster_url), class: 'img-fluid' %>
          </div>
        <% end %>
      </div>
    </p>
    <%= render 'progress', list: list %>
  </div>
</div>
